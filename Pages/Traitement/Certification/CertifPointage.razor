{

	[CascadingParameter] public SessionDT session { get; set; } = new SessionDT();
	DB db = new DB();
	//Components
	private SfGrid<API_V_CERTIFPOINTAGE> DefaultGrid;
	private DateTime SelectedDate = DateTime.Today;
	private int SelectedSite = 0;
	string grid_height = "80vh";
	NumericEditCellParams parameters = new NumericEditCellParams() { Params = new NumericTextBoxModel<object>() { Decimals = 2, Format = "N2" } };
	private List<API_V_CERTIFPOINTAGE> items = new List<API_V_CERTIFPOINTAGE>();
	bool loading = false;
	private DateTime value = DateTime.Today;
	List<API_T_Site> sites = new List<API_T_Site>();
	bool IsLoaded = false;
	protected override async Task OnInitializedAsync()
	{
		await Task.Delay(1);
		db = session.db;
		GC.Collect();
		await UpdateGrid();
		IsLoaded = true;

	}
	private async Task UpdateGrid()
	{
		items = db.API_V_CERTIFPOINTAGE
		.OrderByDescending(a => a.id)
		.ToList();
	}
	private async Task OnSelect(DateTime value)
	{
		this.value = value;
		SelectedDate = value;
		await UpdateGrid();
	}
	private async Task ValueChangeHandler(ChangeEventArgs<int, API_V_CERTIFPOINTAGE> args)
	{
		await UpdateGrid();
	}
	private void OnPanelChange(DateTime value, string mode)
	{
		this.value = value;
	}
	public async Task EditGrid(ActionEventArgs<API_V_CERTIFPOINTAGE> args)
	{
		if (args.RequestType.Equals(Syncfusion.Blazor.Grids.Action.Save))
		{
			if (1 == 1)
			{


				if (args.Action == "Add")
				{


					API_T_CertifPointage item = new API_T_CertifPointage();
					fn.CopyData(args.Data, item);
					item.Date = SelectedDate;
					item.DateCreation = DateTime.Now;
					db.Add(item);
					db.SaveChanges();
					await UpdateGrid();
				}
				if (args.Action != "Add")
				{
                    var ln = db.API_T_CertifPointage.Where(a => a.id == args.Data.id).FirstOrDefault();
                    fn.CopyData(args.Data, ln);
					var local = db.Set<API_T_CertifPointage>().Local.FirstOrDefault(a => a.id == ln.id);
					if (local != null)
					{
						db.Entry(local).State = EntityState.Detached;
					}
					db.Entry(ln).State = EntityState.Modified;
					db.SaveChanges();


					await UpdateGrid();
					//await DefaultGrid.Refresh();
					//foreach()

				}


			}
			else
			{
				args.Cancel = true;
			}


		}

		if (args.RequestType.Equals(Syncfusion.Blazor.Grids.Action.Delete))
		{
			db.Database.ExecuteSqlRaw("DELETE FROM API_T_CertifPointage WHERE id = {0}", args.Data.id);
			await UpdateGrid();

		}

	}
	private RenderFragment DateCellRender(DateTime value)
	{
		var dt = db.API_V_CERTIFPOINTAGE.Where(a => a.Date == value);
		if (dt.Count() != 0)
		{
			return
			   @<Template>
				<div>
					<RadzenIcon Icon="check_circle_outline" IconStyle="@IconStyle.Success" />
				</div>
			</Template>
			;
		}
		else
		{
			return
				@<Template>
				<div>
				</div>
			</Template>
			;
		}
	}

}

