    public static List<F_DOCLIGNE> GroupByARRefWithTotalQte(List<F_DOCLIGNE> docLignes)
    {
        return docLignes
            .Where(dl => !string.IsNullOrEmpty(dl.AR_Ref))
            .GroupBy(dl => dl.AR_Ref)
            .Select(g => new
            {
                AR_Ref = g.Key,
                TotalQte = g.Sum(dl =>
                    (dl.DL_Qte ?? 0m) * (dl.DL_MvtStock == 1 ? -1 : 1))
            })
            .Where(g => g.TotalQte > 0)
            .Select(g => new F_DOCLIGNE
            {
                AR_Ref = g.AR_Ref,
                DL_Qte = g.TotalQte
            })
            .ToList();
    }
    public async Task OnContextMenuClick(ContextMenuClickEventArgs<API_V_DOCENTETE> args)
    {

        var dt = DefaultGrid.GetSelectedRecordsAsync().Result;
        if (args.Item.Id == "bl")
        {
            bool isConfirm = await SyncDialog.ConfirmAsync("Voulez vous vraiment transformer les éléments selectionnés en bons de livraisons?");
            if (isConfirm)
            {
                if (dt.Any())
                {
                    SageService sg = new SageService(fn.getDb(session.Societe));
                    foreach (var CT_Num in dt.Select(a => a.DO_Tiers).Distinct())
                    {
                        var lignes = new List<F_DOCLIGNE>();
                        foreach (API_V_DOCENTETE item in dt)
                        {
                            lignes.AddRange(db.F_DOCLIGNE.AsNoTracking().Where(a => a.DO_Piece == item.DO_Piece
                                && a.DO_Type == item.DO_Type
                            && a.CT_Num == CT_Num
                            ).ToList());
                        }
                        var groupedLignes = GroupByARRefWithTotalQte(lignes);
                        var AddedLignes = new List<DocumentLigne>();
                        if (groupedLignes.Any())
                        {
                            foreach (var lg in groupedLignes)
                            {
                                AddedLignes.Add(new DocumentLigne
                                {
                                    RefArticle = lg.AR_Ref,
                                    Qte = lg.DL_Qte ?? 1
                                });
                            }
                            var dc = await sg.Document.CreateDocument(
                                     new DocumentEntete
                                     {
                                         Tiers = CT_Num,
                                         Date = DateTime.Today,
                                         TypeDO = DocumentTypeDO.BonLivraisonClient,
                                         Souche = 0,
                                         DateLivraison = DateTime.Today,
                                         Entete1 = sc.User.Name,
                                         Lignes = AddedLignes,
                                         Statut = 2,
                                         Depot = dt.First().DE_No

                                     }
                                 );
                            if (!dc.Success)
                            {
                                _ = _notice.Error(new()
                                {
                                    Message = "Erreur",
                                    Description = dc.Message,
                                    Duration = 10,
                                    Placement = NotificationPlacement.BottomRight
                                });
                            }
                            else
                            {
                                var log_lignes = new List<API_T_Audit_F_DOCLIGNE>();
                                var log_entetes = new List<API_T_Audit_F_DOCENTETE>();
                                foreach(API_V_DOCENTETE item in dt)
                                {
                                    var entete = db.F_DOCENTETE.First(a => a.cbMarq == item.cbMarq);


                                    var old_lignes = db.F_DOCLIGNE.Where(a => a.DO_Piece == item.DO_Piece && a.DO_Type == item.DO_Type).ToList();
                                    foreach (var lg in old_lignes)
                                    {
                                        var log_ligne = new API_T_Audit_F_DOCLIGNE();
                                        fn.CopyData(lg, log_ligne);
                                        log_ligne.DO_Ref = dc.DocumentNumber;
                                        log_ligne.Operation = "Transformation";
                                        log_ligne.Timestamp = DateTime.Now;
                                        log_ligne.Suser_Name = sc.User.Name;
                                        log_ligne.Sage_Name = sc.User.Name;
                                        if(lg.DL_MvtStock == 1)
                                        {
                                            log_ligne.DL_Qte = -lg.DL_Qte;
                                        }

                                        log_lignes.Add(log_ligne);
                                        db.Database.ExecuteSqlRaw("DELETE FROM F_DOCLIGNEEMPL WHERE DL_No = {0}", lg.DL_No);
                                        db.Database.ExecuteSqlRaw("DELETE FROM F_DOCLIGNE WHERE cbMarq = {0}", lg.cbMarq);

                                    }

                                    var log_entete = new API_T_Audit_F_DOCENTETE();
                                    fn.CopyData(item, log_entete);
                                    log_entete.DO_Ref = dc.DocumentNumber;
                                    log_entete.Operation = "Transformation";
                                    log_entete.Timestamp = DateTime.Now;
                                    log_entete.Suser_Name = sc.User.Name;
                                    log_entete.Sage_Name = sc.User.Name;
                                    log_entetes.Add(log_entete);
                                    db.Database.ExecuteSqlRaw("DELETE FROM F_DOCENTETE WHERE cbMarq = {0}", item.cbMarq);


                                }

                                using var _db = db.CreateLinqToDBConnection();
                                await db.BulkCopyAsync(log_lignes);
                                await db.BulkCopyAsync(log_entetes);
                                await UpdateGrid();

                                

                                _ = _notice.Success(new()
