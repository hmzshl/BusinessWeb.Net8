@page "/clients"
@attribute [Authorize(Roles = "Super Admin,Admin,Direction,Commercial")]



@if (IsLoaded)
{
    <Card_1 Title="LISTE DES CLIENTS">
        <TiersListe CT_Type="0" Title="Clients" />
    </Card_1>
}
else
