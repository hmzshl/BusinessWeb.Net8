<div class="max-w-6xl mx-auto" style="padding: 10px; font-family: Ubuntu !important;">
    <div class="grid grid-cols-1 @GetGridCols() gap-6 place-items-center">
        @ChildContent
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public int CardCount { get; set; } = 4;

    private string GetGridCols()
    {
        return CardCount switch
        {
            1 => "md:grid-cols-1",
            2 => "md:grid-cols-2",
            3 => "md:grid-cols-3",
            4 => "md:grid-cols-2 lg:grid-cols-4",
            5 => "md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5",
            6 => "md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6",
            _ => "md:grid-cols-2 lg:grid-cols-4"
        };
    }
}